	#downloadModal.modal.fade(role='dialog')
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type='button', data-dismiss='modal') Ã—
					h4.modal-title Download
				.modal-body
					p Format
					label.radio-inline
						input(type='radio', name='formatRadio' value="JSON")
						| JSON
					label.radio-inline
						input(type='radio', name='formatRadio' value="Shapefile")
						| Shapefile	
					br
					br
					br
					label.checkbox-inline
						input#buildingsPositiveBalance(type='checkbox', value='')
						| Only include buildings with positive balance
					br
					br
					br
					label.checkbox-inline
						input#settlementsPositiveBalance(type='checkbox', value='')
						| Mark tiles as settlements according to their balance
